<?xml version="1.0" encoding="UTF-8"?>
<zabbix_export>
    <version>5.3</version>
    <date>2023-08-24T03:10:00Z</date>
    <groups>
        <group>
            <name>Templates</name>
        </group>
    </groups>
    <templates>
        <template>
            <template>Windows-Updates-v5</template>
            <name>Windows-Updates-v5</name>
            <groups>
                <group>
                    <name>Templates</name>
                </group>
            </groups>
            <applications>
                <application>
                    <name>Windows-Updates</name>
                </application>
                <application>
                    <name>Windows-Updates-Panel</name>
                </application>
            </applications>
            <items>
                <item>
                    <name>Deploy PS Script</name>
                    <type>ZABBIX_ACTIVE</type>
                    <key>system.run[powershell.exe -NoProfile -ExecutionPolicy Bypass -command Invoke-WebRequest -Uri https://git.io/JUTvh -OutFile $Env:Programfiles\'Zabbix Agent\plugins\check_win_updates-v5.ps1',nowait]</key>
                    <delay>1d</delay>
                    <trends>0</trends>
                    <value_type>LOG</value_type>
                    <applications>
                        <application>
                            <name>Winupdates</name>
                        </application>
                    </applications>
                </item>
                <item>
                    <name>Windows-Update-Check</name>
                    <type>ZABBIX_ACTIVE</type>
                    <key>system.run[powershell.exe -NoProfile -ExecutionPolicy Bypass -file C:\zabbix\plugins\check_win_updates-v5.ps1 , nowait]</key>
                    <delay>1d</delay>
                    <history>30d</history>
                    <trends>0</trends>
                    <value_type>LOG</value_type>
                    <applications>
                        <application>
                            <name>Windows-Updates</name>
                        </application>
                    </applications>
                </item>
                <item>
                    <name>Critical Updates</name>
                    <type>TRAP</type>
                    <key>Windows-Updates.Critical</key>
                    <delay>0</delay>
                    <history>30d</history>
                    <trends>30d</trends>
                    <description>Number of Critical Windows Updates Available</description>
                    <applications>
                        <application>
                            <name>Windows-Updates-Panel</name>
                        </application>
                    </applications>
                    <triggers>
                        <trigger>
                            <expression>{last()}&gt;0 and {last()}&lt;3</expression>
                            <name>There are critical updates for {HOST.NAME}</name>
                            <priority>INFO</priority>
                        </trigger>
                        <trigger>
                            <expression>{last()}&gt;3</expression>
                            <name>There are more than 3 critical updates for {HOST.NAME}</name>
                            <priority>WARNING</priority>
                        </trigger>
                    </triggers>
                </item>
                <item>
                    <name>Important Updates</name>
                    <type>TRAP</type>
                    <key>Windows-Updates.Important</key>
                    <delay>0</delay>
                    <history>30d</history>
                    <trends>30d</trends>
                    <description>Number of Important Windows Updates Available</description>
                    <applications>
                        <application>
                            <name>Windows-Updates-Panel</name>
                        </application>
                    </applications>
                    <triggers>
                        <trigger>
                            <expression>{last()}&gt;0 and {last()}&lt;3</expression>
                            <name>There are important updates for {HOST.NAME}</name>
                            <priority>INFO</priority>
                        </trigger>
                        <trigger>
                            <expression>{last()}&gt;3</expression>
                            <name>There are more than 3 important updates for {HOST.NAME}</name>
                            <priority>WARNING</priority>
                        </trigger>
                    </triggers>
                </item>
                <item>
                    <name>Hidden Updates</name>
                    <type>TRAP</type>
                    <key>Windows-Updates.Hidden</key>
                    <delay>0</delay>
                    <history>30d</history>
                    <trends>30d</trends>
                    <description>Number of Hidden Windows Updates</description>
                    <applications>
                        <application>
                            <name>Windows-Updates-Panel</name>
                        </application>
                    </applications>
                    <triggers>
                        <trigger>
                            <expression>{last()}&gt;0</expression>
                            <name>There are hidden updates for {HOST.NAME}</name>
                            <priority>INFO</priority>
                            <manual_close>YES</manual_close>
                        </trigger>
                    </triggers>
                </item>
                <item>
                    <name>Last Updated</name>
                    <type>TRAP</type>
                    <key>Windows-Updates.LastUpdated</key>
                    <delay>0</delay>
                    <history>30d</history>
                    <trends>0</trends>
                    <value_type>TEXT</value_type>
                    <description>Date last Windows updates were applied</description>
                    <applications>
                        <application>
                            <name>Windows-Updates-Panel</name>
                        </application>
                    </applications>
                </item>
                <item>
                    <name>Optional Updates</name>
                    <type>TRAP</type>
                    <key>Windows-Updates.Optional</key>
                    <delay>0</delay>
                    <history>30d</history>
                    <trends>30d</trends>
                    <description>Number of Optional Windows Updates Available</description>
                    <applications>
                        <application>
                            <name>Windows-Updates-Panel</name>
                        </application>
                    </applications>
                    <triggers>
                        <trigger>
                            <expression>{last()}&gt;5</expression>
                            <name>There are a large number of optional updates for {HOST.NAME}</name>
                            <priority>WARNING</priority>
                        </trigger>
                        <trigger>
                            <expression>{last()}&gt;0</expression>
                            <name>There are optional updates for {HOST.NAME}</name>
                            <priority>INFO</priority>
                        </trigger>
                    </triggers>
                </item>
                <item>
                    <name>Reboot Required</name>
                    <type>TRAP</type>
                    <key>Windows-Updates.Reboot</key>
                    <delay>0</delay>
                    <history>30d</history>
                    <description>Number of Critical Windows Updates Available</description>
                    <applications>
                        <application>
                            <name>Windows-Updates-Panel</name>
                        </application>
                    </applications>
                    <triggers>
                        <trigger>
                            <expression>{last()}=1</expression>
                            <name>Reboot required for {HOST.NAME}</name>
                            <priority>INFO</priority>
                        </trigger>
                    </triggers>
                </item>
                <item>
                    <name>Installing Updates</name>
                    <type>TRAP</type>
                    <key>Windows-Updates.Updating</key>
                    <delay>0</delay>
                    <history>30d</history>
                    <trends>30d</trends>
                    <description>Windows is installing updates</description>
                    <applications>
                        <application>
                            <name>Windows-Updates-Panel</name>
                        </application>
                    </applications>
                    <triggers>
                        <trigger>
                            <expression>{last()}=1</expression>
                            <name>{HOST.NAME} is running updates</name>
                            <priority>INFO</priority>
                            <manual_close>YES</manual_close>
                        </trigger>
                    </triggers>
                </item>
            </items>
        </template>
    </templates>
</zabbix_export>